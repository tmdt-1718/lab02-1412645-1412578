<% content_for(:title, "Đăng nhập") %>
<% if !flash[:error].nil? %>
<div class="alert alert-danger" role="alert">
  <span><%= flash[:error] %></span>
</div>
<% end %>
<%= form_with scope: :session, url: session_index_path, local: true, method: :post do |form| %>
	<div class="form-group">
		<label for="email">Thư điện tử</label>
		<%= form.text_field :email, id: "email", class: "form-control" %>
	</div>
	<div class="form-group">
		<label for="password">Mật khẩu</label>
		<%= form.password_field :password, id: "password", class: "form-control" %>
	</div>
	<button type="submit" class="btn btn-primary">Đăng nhập</button>
<% end %>