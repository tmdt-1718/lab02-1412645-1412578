<% content_for(:title, "Đăng ký") %>
<% if !flash[:error].nil? %>
<div class="alert alert-danger" role="alert">
  <span><%= flash[:error] %></span>
</div>
<% end %>
<%= form_with scope: :user, url: users_path, local: true, method: :post do |form| %>
<div class="form-group">
	<label for="fullname">Tên</label>
	<%= form.text_field :fullname, placeholder: "Litten", id: "fullname", class: "form-control" %>
</div>
<div class="form-group">
	<label for="email">Thư điện tử</label>
	<%= form.text_field :email, placeholder: "litten@gmail.com", id: "email", class: "form-control" %>
</div>
<div class="form-group">
	<label for="password">Mật khẩu</label>
	<%= form.password_field :password, id: "password", class: "form-control" %>
</div>
	<button type="submit" class="btn btn-primary">Đăng ký</button>
<% end %>